
@{
    ViewBag.Title = "Connect";
}


<div class="jumbotron">
    @{
        if (ViewBag.Error != null)
        {
            <div class="alert alert-danger" role="alert">
                Connection failed
            </div>
            <ul class="list-group">
                @foreach (var error in ViewBag.Error)
                {
                    <li class="list-group-item list-group-item-danger">@error</li>
                }
            </ul>
        }
        if (ViewBag.Results != null)
        {
            <div class="alert alert-success" role="alert">
                Connection success!
            </div>
            <ul class="list-group">
                @foreach (var result in ViewBag.Results)
                {
                    <li style="margin-bottom: 2px" class="list-group-item">@result</li>
                }
            </ul>
        }
    }
    <a href="/" class="btn btn-secondary btn-sm">Go back</a>
</div>

